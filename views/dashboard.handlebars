<h2>Dashboard</h2>
<nav>
    <button class="btn" id="logout">Logout</button>
    <button class="btn" id="home">Home</button>
</nav>

<form class="form post-form">
    <div>
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title"/>
     </div> 
     <div>
        <label for="post-body">Post Body:</label>
        <input class="form-input" type="text" id="post-body"/>
     </div>  
    <div>
        <button class="btn btn-primary" type="submit">Create Post!</button>
    </div>
    
</form>

{{#each posts}}
<h2>{{postTitle}}</h2>
<p>{{postBody}}</p>
<div>
    <button class="btn btn-primary" type="submit">Delete Post</button>
</div>
<form class="newComment-form">
    <label for="commentBody">New Comment:</label>
    <input class="comment-input" type="text" id="commentBody"/>
</form>

<button class="btn btn-primary" type="submit">Add Comment</button>
<button class="btn btn-primary" type="submit">Delete Comment</button>
{{/each}}

<script src="./js/post.js"></script>
<script src="./js/comment.js"></script>