const router = require("express").Router();
const { Comment } = require("../../models");
const withAuth = require("../../utils/auth");

//Creates a comment
router.Comment("/", withAuth, async (req, res) => {
  try {
    const comment = await Comment.create({
      commentBody: req.body.commentBody,
      userId: req.session.user_id,
    });
    res.json({ comment, message: "Your comment has been created." });
  } catch (error) {
    res.status(500).json({ message: "Your comment failed to create." });
    return;
  }
});

//GETS a blog Comment by ID
router.get("/:id", async (req, res) => {
  try {
    const commentID = await Comment.findOne({
      where: { id: req.params.id },
    });
    const rendercommentID = commentID.get({ plain: true });

    res.render("editComment", {
      rendercommentID,
      logged_in: req.session.logged_in,
    });
  } catch (err) {
    console.log(err);
    res.send(err);
  }
});

//Deletes a comment
router.delete("/:id", withAuth, async (req, res) => {
  try {
    const deleteComment = await Comment.destroy({
      where: {
        id: req.params.id,
      },
    });
    if (!deleteComment) {
      res
        .status(404)
        .json({ message: "Please select a comment with a valid Id." });
      return;
    }
    res.status(200).json(deleteComment);
  } catch (error) {
    res.status(500).json(err);
  }
});

module.exports = router;
